@using Pipe.Module.Core.Models
@inject SignInManager<User> SignInManager

@if (SignInManager.IsSignedIn(User))
{
    if (User.IsInRole("admin"))
    {
        <li class="nav-item"><a class="nav-link" href="/admin">Личный кабинет</a></li>
    }
    <li class="nav-item">
        <form asp-area="Core" asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm" class="">
            <button type="submit" class="btn btn-link">Выйти</button>
        </form>
    </li>
}
else
{
    <p>testpartial</p>
    <li class="nav-item"><a class="nav-link" asp-area="Core" asp-controller="Account" asp-action="Login">Войти</a></li>
    <li class="nav-item"><a class="nav-link" asp-area="Core" asp-controller="Account" asp-action="Register">Новый пользователь</a></li>
}
